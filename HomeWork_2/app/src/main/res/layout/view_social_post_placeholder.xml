<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="com.adeldolgov.homework_2.ui.viewgroup.PlaceHolderSocialPostViewGroup">

    <TextView
        android:id="@+id/postOwnerText"
        android:layout_width="128dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:transitionName="postOwnerText"
        android:background="#B3B3B3" />

    <TextView
        android:id="@+id/postTimeText"
        style="@style/SecondaryTextTheme"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:transitionName="postTimeText"
        android:background="#B3B3B3" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/postOwnerImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:transitionName="postOwnerImage"
        android:background="#B3B3B3"
        app:shapeAppearanceOverlay="@style/CircleImageView" />

    <TextView
        android:id="@+id/postContentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        android:transitionName="postContentText"
        android:textColor="@android:color/transparent"
        android:background="#B3B3B3"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. \nCras vitae ex molestie, vulputate nisl vel, placerat dolor. Donec elementum nibh vitae gravida cursus." />

    <ImageView
        android:id="@+id/postContentImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:adjustViewBounds="true"
        android:background="#B3B3B3"
        android:transitionName="postContentImage" />


</merge>