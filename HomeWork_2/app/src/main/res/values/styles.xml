<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="bottomSheetDialogTheme">@style/Widget.App.CardView.BottomSheetDialog</item>
    </style>

    <style name="AppTheme.ImageViewerTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="SecondaryTextTheme">
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="Widget.App.CardView.BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Widget.App.CardView.BottomSheet" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Card.BottomSheet</item>
        <item name="cardElevation">4dp</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Card.BottomSheet" parent="">
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
    </style>

    <style name="RecyclerViewWithCards">
        <item name="background">@color/colorRecyclerBackground</item>
    </style>

    <style name="ProfileTextTheme">
        <item name="android:textColor">@color/colorSecondaryProfileText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SemiCircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25%</item>
    </style>

</resources>